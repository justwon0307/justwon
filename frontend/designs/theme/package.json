{
  "name": "@justwon/theme",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./globals.css": {
      "types": "./dist/globals.css.d.ts",
      "default": "./dist/globals.css.js"
    }
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --project tsconfig.build.json",
    "dev": "tsc --watch --project tsconfig.build.json",
    "lint": "eslint .",
    "test": "vitest run",
    "test:dev": "vitest --watch --coverage"
  },
  "devDependencies": {
    "@justwon/eslint-config": "workspace:*",
    "@justwon/tsconfig": "workspace:*",
    "@justwon/vitest-config": "workspace:*",
    "@testing-library/react": "catalog:",
    "@types/react": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@vanilla-extract/css": "^1.18.0",
    "react": "19.2.3"
  },
  "lint-staged": {
    "*.{json,md,yml,yaml}": "prettier --check",
    "*.{ts,tsx,js,jsx}": [
      "eslint .",
      "prettier --check"
    ]
  }
}
